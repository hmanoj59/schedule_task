<h1>Dashboard</h1>

<h1>Schedules</h1>


<%= link_to 'New Schedule',   new_schedule_path,class: 'btn btn-primary btn-md' %>
</br>
<table class="table table-hover table-inverse">
  <thead>
  <tr>
    <th>Name</th>
    <th>Enabled?</th>
    <th>action</th>
    <th>From Time</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @schedule.each do |schedule| %>
      <% if schedule.user == current_user %>
      <tr>
        <td><%= schedule.name %></td>
        <td><%= schedule.enabled %></td>
        <td><%= schedule.action %></td>
        <td><%= schedule.from_time %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule_path(schedule), method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<% end %>
<br>


