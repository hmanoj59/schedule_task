<h1>Dashboard</h1>

<h1>Schedules</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Remarks</th>
    <th>snapshotid</th>
    <th>snapshotname</th>
    <th>From Time</th>
    <th>To Time</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @schedule.each do |schedule| %>
      <tr>
        <td><%= schedule.name %></td>
        <td><%= schedule.remarks %></td>
        <td><%= schedule.snapshotid %></td>
        <td><%= schedule.snapshotname %></td>
        <td><%= schedule.from_time %></td>
        <td><%= schedule.to_time %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Schedule',   new_schedule_path,class: 'button alt' %>


<input type="button" onclick="window.location = '/rdsstart'">Rdsstart</input>
<input type="button" onclick="window.location = '/rdsstop'">Rdsstop</input>
<input type="button" onclick="window.location = '/ec2start'">Ec2start</input>
<input type="button" onclick="window.location = '/ec2stop'">EC2start</input>


